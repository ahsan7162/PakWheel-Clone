

<style>
    .small-icon {
        height: 70px;
        width: 70px;
    }

    table {
        border-collapse: separate;
        border-spacing: 0 0px;
        font-size: 24px;
        display: flex;
        align-content: center;
        margin-left: auto;
        margin-right: auto;
        border: 1px solid lightgrey;
        width: 1000px;
    }

    th,
    td {
        width: 250px;
        text-align: center;
        padding: 5px;
        border-right: 1px solid lightgrey;
        border-left: 1px solid lightgrey;
    }
</style>

@{
    var data = ViewBag.car;
}
<h2 style="text-align:center">Details</h2>

@{ if (data != null)
    {
        <h3 style="text-align:left">@data.description</h3>
        <div class="container-sm my-0">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                @*<ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>*@
                <div class="carousel-inner">
                    @{ for (int i = 0; i < @ViewBag.jsonImages.Count; i++)
                        {
                            if (i == 0)
                            {
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src=@data.image_url alt="First slide">
                                    <div class="carousel-caption d-none d-md-block">
                                        @*<h5>Honda Corolla</h5>
                                            <p>Riding The beast</p>*@
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src=@ViewBag.jsonImages[i] alt=@ViewBag.jsonImages[i]>
                                    <div class="carousel-caption d-none d-md-block">
                                        @*<h5>Honda Corolla</h5>
                                            <p>Riding The beast</p>*@
                                    </div>
                                </div>
                            }
                        }
                    }
                    @*<div class="carousel-item active">
                            <img class="d-block w-100" src=@data.image_url alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Honda Corolla</h5>
                                <p>Riding The beast</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://www.autoguide.com/blog/wp-content/gallery/new-honda-civic-vs-toyota-corolla/Honda-Civic-vs-Toyota-Corolla-spec-comparison-1.jpg" alt="Second slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Honda Civic</h5>
                                <p>Riding The beast</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://wallpapercave.com/wp/wp4553201.jpg" alt="Third slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Suzuki Alto</h5>
                                <p>Riding The beast.</p>
                            </div>
                        </div>*@
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <br />
        <br />

        <div>
            <h3 style="text-align:left">@data.description</h3>
            <h3 style="text-align: left; color: lightgreen"><span>@data.price</span> PKR</h3>
        </div>


        <table>
            <tr>
                <td><img src="https://cdn-icons-png.flaticon.com/512/747/747310.png" class="small-icon" /></td>
                <td><img src="https://cdn-icons.flaticon.com/png/512/1256/premium/1256936.png?token=exp=1638903104~hmac=e9a44c7a639f3a0768df3fd9596d4398" class="small-icon" /></td>
                <td><img src="https://cdn-icons-png.flaticon.com/512/115/115101.png" class="small-icon" /></td>
                <td><img src="https://cdn-icons.flaticon.com/png/512/2260/premium/2260179.png?token=exp=1638903668~hmac=bceb7a995bfac88c982669176258f383" class="small-icon" /></td>

            </tr>
            <tr>
                <td>@data.model_year</td>
                <td>@data.engine_capacity<span> cc</span></td>
                <td>@data.fuel_type</td>
                <td>@data.transmission</td>
            </tr>
        </table>
        <br />
        <br />


        <p><b>Mileage Used: </b>@data.engine_milegage</p>
        <hr />
        <p><b>Brand Name: </b>@data.brand_name</p>
        <hr />
        <p><b>Manufacturer: </b>@data.manufacturer</p>
        <hr />
        <p><b>Condition: </b>@data.item_condition</p>
        <hr />
        <p><b>Price: </b>@data.price</p>
        <hr />

        <h4>Car Features</h4>

            <ul>
               @{
                   for (int i = 0; i < @ViewBag.carFeatures.Count; i++)
                   {
                        <li>@ViewBag.carFeatures[i]</li>

                   }
                 }
            </ul>
      
        <hr />

        <h4>Seller Comments</h4>
        <hr />

        //for loop wiil be used to print evry comment
        @*<p>Comment line 1</p>*@
        <p>@ViewBag.sellerComment</p>
    }

    else
    {
        <h1>Car Not Found </h1>
    }
}


